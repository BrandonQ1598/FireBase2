<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CB8F2"
    tools:context=".ContrasenaActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconfirebasecontra"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/firebaseicon" />

        <TextView
            android:id="@+id/textregistrar"
            android:layout_height="47dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:text="Necesitamos el email que usaste en tu registro para enviar el correo."
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textemailpassolv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:text="Email:"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/emailpassolv"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:background="#FFFFFF"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/enviarcorrconolv"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:background="#FF8C00"
            android:text="Enviar Correo"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/regresarcon"
            android:layout_marginTop="20dp"
            android:text="Regresar"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

    </TableLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CB8F2"
    tools:context=".CambiarcorreoActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textemailcambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:text="Nuevo Email:"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/emailnuevo"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:background="#FFFFFF"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/cambiarcorreo"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:background="#FF8C00"
            android:text="Cambiar Correo"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/regresarini"
            android:layout_marginTop="20dp"
            android:text="Regresar"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

    </TableLayout>
</LinearLayout>